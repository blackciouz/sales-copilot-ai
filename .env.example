# Sales Copilot AI - Environment Variables

# Database
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://salescopilot_user:your_secure_password_here@localhost:5432/salescopilot

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_rabbitmq_password
RABBITMQ_URL=amqp://admin:your_rabbitmq_password@localhost:5672/

# AI APIs
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Lead Research APIs
APOLLO_API_KEY=your_apollo_api_key
HUNTER_API_KEY=your_hunter_api_key
CLEARBIT_API_KEY=your_clearbit_api_key

# CAPTCHA Solving
TWOCAPTCHA_API_KEY=your_2captcha_key

# Email Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Calendar Integration
GOOGLE_CALENDAR_API_KEY=your_google_calendar_key
CAL_COM_API_KEY=your_cal_com_key

# Payment
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_key

# Security
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# App Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Feature Flags
ENABLE_LINKEDIN_AUTOMATION=false
ENABLE_SMS_AUTOMATION=false
ENABLE_VOICE_CALLS=false
